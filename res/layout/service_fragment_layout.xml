<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.yihen.jdb"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
        >
              <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/padding_10dp"
                      >
                  <com.yihen.jdb.ui.widget.ExpandEditText
                          android:id="@+id/search_button"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_40dp"
                          android:background="@drawable/jdb_login_phone_input_drawable"
                          app:right_visibility="gone"
                          app:left_visibility="visiable"
                          app:hint="搜索加电宝商家"
                          app:enabled="false"
                          />
              </LinearLayout>
              <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      >
                   <ListView
                           android:id="@+id/left_menu"
                           android:layout_width="@dimen/width_80dp"
                           android:layout_height="match_parent"
                           android:scrollbars="none"
                           android:fadingEdge="none"
                           />
                   <FrameLayout
                           android:id="@+id/fragment_contanier"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:background="@color/white"
                           />
              </LinearLayout>
</LinearLayout>