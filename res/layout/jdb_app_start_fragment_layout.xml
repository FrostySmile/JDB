<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/app_start_background"
              android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/jdb_button_startup"
                android:background="@drawable/jdb_app_start_button_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
            <TextView
                    android:textSize="25sp"
                    android:textColor="@color/white_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <ImageView
                    android:paddingLeft="@dimen/padding_5dp"
                    android:src="@drawable/double_right"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/height_25dp"/>
        </LinearLayout>
</RelativeLayout>